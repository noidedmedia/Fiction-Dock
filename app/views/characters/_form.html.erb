<div id="character-form" class="fd-form">
  <%= form_for [@franchise, @character] do |f| %>
    
    <%= f.label :name, t(".character_name") %>
    <%= f.text_field :name, placeholder: t(".character_name"), autocomplete: "off" %>

    <%= f.label :description, t(".description") %>
    <%= f.text_area :description, placeholder: t(".write_a_short_description_of_the_character") %>

    <%# Submit button string will change depending on the action name (edit, new, etc.)%>
    <%= f.submit t(".submit.#{action_name}") %>

  <% end %> 

  <%# Only display "Delete character" if the character has already been created. Verify that the user has the ability to delete the character. %>
  <% if action_name == "edit" && policy(@character).destroy? %>
    <%= link_to t(".delete_character"), franchise_character_path(@franchise, @character), method: :delete, data: { confirm: t(".are_you_sure_you_want_to_delete_this_character") }, class: "delete-button" %>
  <% end %>
</div>
