<li class="comment" id="comment-number-<%= comment.id %>">
  <div class="comment-meta">
    <%= t(".user_posted_time_ago_html", username: comment.user ? (link_to comment.user.name, comment.user) : t(".nobody"), time: time_ago_in_words(comment.created_at) ) %>
  </div>
  
  <div class="comment-body">
    <%= markdown_parse comment.body %>
  </div>
</li>
