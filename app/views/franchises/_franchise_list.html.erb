<ul id="franchise-list" class="fd-list fd-browse-list">
  <div class="fd-list-header">
    <%= t(".franchises") %>
    <span><%= link_to "Request a new franchise", new_franchise_creation_request_path %></span>
  </div>

  <% franchises.each do |franchise| %>
    <li class="fd-list-item">
      <p class="fd-list-item-title franchise-list-item-title"><%= link_to franchise.name, franchise %>
      <p class="fd-list-item-subtitle franchise-list-item-description"><%= franchise.description %>
    </li>
  <% end %>
</ul>

<div class="pagination-container">
  <%= paginate(franchises) %>
</div>
