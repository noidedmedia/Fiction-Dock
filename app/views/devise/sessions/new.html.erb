<%- title t(".sign_in_title") %>

<div id="sign-in-container">

  <div class="sign-in-header">
    <p class="fiction-dock-logo logo-large">Fiction Dock</p>
    <h4><%= t(".welcome_back") %></h4>
  </div>

  <%= form_for(resource, as: resource_name, url: new_user_session_path()) do |f| %>

    <div id="sign-in-fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: t(".email") %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: t(".password") %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t(".remember_me") %>
        </div>
      <% end -%>
    </div>

    <%= f.submit t(".sign_in"), class: "btn btn-green btn-large" %>

  <% end %>
</div>

<div id="sign-in-extras-container">
  <%= render "devise/shared/links" %>
</div>
