<%- title t(".forgot_your_password_title") %>

<div id="sign-in-container">

  <div class="sign-in-header">
    <p class="fiction-dock-logo logo-large">Fiction Dock</p>
    <h4><%= t(".forgot_your_password?") %></h4>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div id="sign-in-fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: t(".email") %>
      </div>
    </div>

    <%= f.submit t(".reset_password"), class: "btn btn-green btn-large" %>

  <% end %>
</div>

<div id="sign-in-extras-container">
  <%= render "devise/shared/links" %>
</div>
