<% @chapter.errors.full_messages.each do |err| %>
  <%= err %>
<% end %> 


<%= form_for [@story, @chapter] do |f| %>
  <div class="editor">
    <%= f.text_field :name, placeholder: t(".chapter_title") %>
    
    <div id="rich-text" data-placeholder="<%= t('.start_writing_here') %>">
      
    </div>

    <%= f.text_area :body, id: "markdown" %>

    <%= f.submit %>
  </div>
<% end %>
