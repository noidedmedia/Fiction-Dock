<% @chapter.errors.full_messages.each do |err| %>
  <%= err %>
<% end %>

<%= form_for [@story, @chapter] do |f| %>
  <div class="editor plain-editor">
    <%= f.text_field :name, placeholder: t(".chapter_title"), autocomplete: "off" %>

    <div id="plain-text-contenteditable" contenteditable="true" placeholder="<%= t('.start_writing_here') %>"><%= @chapter.body %></div>

    <%= f.text_area :body, id: "plain-text-textarea" %>

    <hr>

    <%= f.submit t(".save"), id: "plain-editor-submit" %>
  </div>
<% end %>
